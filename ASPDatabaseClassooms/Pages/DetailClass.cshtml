@page
@model Database2.Pages.DetailClassModel

@{
    ViewData["Title"] = "DetailClass";
}

<h1>DetailClass</h1>

<div>
    <h4>Classroom</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Classroom.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Classroom.Name)
        </dd>
    </dl>
</div>
<div>
    <table class="table table-bordered">
        @foreach (var c in Model.Students)
        {
               <tr>
                   <td>@c.Firstname</td>
                   <td>@c.Lastname</td>
               </tr>


        }
    </table>
</div>
<div>
    <a class="btn btn-primary" asp-page="./editClass" asp-route-id="@Model.Classroom.Id">Edit</a> |
    <a asp-page="./Index" class="btn btn-primary">Back to List</a>
</div>
